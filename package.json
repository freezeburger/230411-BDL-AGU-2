{
  "name": "bdl-project",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test --code-coverage",
    "start:api": "json-server ./API/data.json -p 5050 -w",
    "compodoc:build-and-serve": "compodoc -p tsconfig.doc.json -s --output ./documentation/application",
    "bdl:build": "ng build --project=bdl",
    "bdl:test": "ng test --project=bdl",
    "bdl:test-report": "ng test --project=bdl --code-coverage --watch=false",
    "bdl:doc": "compodoc -p ./projects/bdl/tsconfig.doc.json -s --output ./documentation/bdl-lib",
    "prebdl:pack": "npm run bdl:build",
    "prebdl-auth:pack": "npm run build --project=bdl-auth",
    "bdl-auth:build": "ng build --project=bdl-auth",
    "bdl-auth:pack": "npm pack ./dist/bdl-auth",
    "bdl-auth:test": "ng test --project=bdl-auth",
    "bdl-auth:doc": "compodoc -p ./projects/bdl-auth/tsconfig.doc.json -s --output ./documentation/bdl-auth",
    "wc-bdl-auth:build": "ng build --project=wc-bdl-auth",
    "wc-bdl-auth:serve": "ng serve -o --project=wc-bdl-auth"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^15.2.0",
    "@angular/common": "^15.2.0",
    "@angular/compiler": "^15.2.0",
    "@angular/core": "^15.2.0",
    "@angular/elements": "^15.2.7",
    "@angular/forms": "^15.2.0",
    "@angular/platform-browser": "^15.2.0",
    "@angular/platform-browser-dynamic": "^15.2.0",
    "@angular/router": "^15.2.0",
    "bootstrap": "^5.2.3",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.12.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^15.2.5",
    "@angular/cli": "~15.2.5",
    "@angular/compiler-cli": "^15.2.0",
    "@compodoc/compodoc": "^1.1.19",
    "@types/jasmine": "~4.3.0",
    "jasmine-core": "~4.5.0",
    "json-server": "^0.17.3",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.0.0",
    "ng-packagr": "^15.2.2",
    "typescript": "~4.9.4"
  }
}
